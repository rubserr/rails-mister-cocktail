<h2> New ingredient dose </h2>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient, collection: Ingredient.ordered %>
  <%= link_to 'Cancel', cocktail_path(@cocktail), class: 'btn btn-outline-secondary' %> 
  <%= f.submit class: 'btn btn-primary' %>
<% end %>